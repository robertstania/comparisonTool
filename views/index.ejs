<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Comparison Tool</title>
  </head>
  <body>
    <a href="/create/product">Create Product</a> | <a href="/create/store">Create Store</a>
    <br>
    <% for(var i = 0; i<products.length; i++){ %>
      <br>
      <% if (comparisonList.filter(item => item.id == products[i].id).length >0){ %>
        <%= products[i].name %> - <%=products[i].store_name%> - $<%= products[i].price %> - <a href="/remove/compare/<%= products[i].id %>">Remove from comparison</a>
      <% }else{ %>
        <%= products[i].name %> - <%=products[i].store_name%> - $<%= products[i].price %> - <a href="/compare/<%= products[i].id %>">Add to comparison</a>
      <% } %>
    <% } %>
    <br>
    <a href="/showComparison">Show Comparison</a>
  </body>
</html>
